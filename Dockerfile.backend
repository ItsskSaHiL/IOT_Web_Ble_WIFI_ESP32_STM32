FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY src/backend/tsconfig.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY src/backend ./src/backend

# Build TypeScript
RUN npm run build:backend

# Create data directory
RUN mkdir -p /app/data

EXPOSE 3001

CMD ["npm", "start"]